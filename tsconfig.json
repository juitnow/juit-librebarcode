{
  "compilerOptions": {
    "lib": [ "esnext", "webworker" ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [ "@plugjs/plug", "node" ],
    "esModuleInterop": true,

    "noEmit": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
  },
  "include": [
    "./*.ts",
    "./src",
  ],
}
